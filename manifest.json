{
  "name": "Clean code",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Adds a context menu to easily paste content relative to the excelent Clean Code book by Robert Martin.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}